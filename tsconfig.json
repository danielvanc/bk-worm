{
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["components/*"],
      "@/public/*": ["./public/*"]
    },
    "incremental": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "next.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
